* {
	color-bg: #0d0d0d;
	color-fg: #ffffff;
	color-selected: #f280df;

	background-color: @color-bg;
	color: @color-fg;
}

window {
	children: [ mainbox ];
}

mainbox {
	spacing: 0em;
	children: [ message, inputbar, listview ];
}

message {
	padding: 0.75em;
}

inputbar {
	children: [ entry ];
}

entry {
	expand: false;
	width: 30%;
	padding: 1em;
	background-color: @color-bg;
}

listview {
	lines: 8;
	spacing: 0em;
}

element {
	padding: 0.75em;
}

element selected {
	background-color: @color-selected;
	color: @color-bg;
}
